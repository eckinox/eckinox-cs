{
	"devDependencies": {
		"eslint": "^7.16.0",
		"eslint-plugin-html": "^6.1.1",
		"stylelint": "^13.8.0",
		"stylelint-config-standard": "^20.0.0"
	},
	"scripts": {
		"lint": "npm run lint:js && npm run lint:css",
